{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j12"
            ],
            
            "options": {
                "cwd": "${workspaceFolder}/Builds/LinuxMakefile/",
                "env":{
                    "DEBUG":"1"
                }
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            }
        }
    ]
}